[Unit]
Description=ChatPsy FastAPI Backend
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/chatpsy/backend
Environment="PATH=/var/www/chatpsy/backend/venv/bin"
EnvironmentFile=/var/www/chatpsy/backend/.env
ExecStart=/var/www/chatpsy/backend/venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8000 --workers 2
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
